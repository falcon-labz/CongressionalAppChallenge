window.addEventListener('DOMContentLoaded',()=>{ initMap(); initReportMap(); initRouteMap(); renderContacts(); renderRecent(); renderMeds(); renderAppts(); renderResources(); renderToday(); renderMood(); syncSettingsUI(); });

